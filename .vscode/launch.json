
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gcc.exe - 调试活动文件",  // 名称更清晰，对应GCC调试
      "type": "cppdbg",
      "request": "launch",
      // 可执行文件路径：与tasks.json生成的exe路径一致（源文件同目录）
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,  // 若需要在main入口处暂停，改为true
      "cwd": "${fileDirname}",  // 调试工作目录（源文件所在目录）
      "environment": [],
      "externalConsole": false,  // 使用VS Code集成终端（true则弹出独立控制台）
      "MIMode": "gdb",
      // GDB调试器路径：与你的MinGW32中的gdb.exe对应
      "miDebuggerPath": "C:\\Program Files (x86)\\Dev-Cpp\\MinGW32\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "为gdb启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // 关联tasks.json中的编译任务（调试前自动编译）
      "preLaunchTask": "C/C++: gcc.exe 生成活动文件",
      "logging": {
        "moduleLoad": false,
        "trace": true
      }
    }
  ]
}